<sdf version="1.6">
<world name="wingsail_test_world">
    
    <!-- GUI -->
    <gui fullscreen='0'>
        <camera name='user_camera'>
            <pose>-1.46836 1.73682 1.07819 0 0.179455 -0.923817</pose>
            <view_controller>orbit</view_controller>
            <projection_type>perspective</projection_type>
        </camera>
    </gui>

    <!-- Environment -->
    <wind>
        <linear_velocity>-20.0, 0.0, 0.0</linear_velocity>
    </wind>

    <!-- Lights -->
    <include>
        <uri>model://sun</uri>
    </include>

    <!-- A ground plane -->
    <include>
        <uri>model://ground_plane</uri>
    </include>

    <include>
        <!-- <pose>0 0 0.02 0 0 -0.7853981633974483</pose> -->
        <pose>0 0 0.02 0 0 0</pose>
        <uri>model://wing_sail</uri>
    </include>

</world>
</sdf>
